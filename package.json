{
  "name": "schema-sync-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build",
    "dev:desktop": "pnpm --filter @schemasync/desktop run dev",
    "lint": "eslint .",
    "format": "prettier -w .",
    "compare:demo": "pnpm --filter @schemasync/cli run demo"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
